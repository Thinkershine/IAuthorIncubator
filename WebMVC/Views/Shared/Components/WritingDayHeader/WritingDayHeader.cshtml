@model DayHeaderViewModel
@*WritingArea WritingDayHeader*@
<div id="writing-day-header">
    <p><span onclick="closeWritingArea()" id="close-writing-area" class="animate action-button green"><i class="fa fa-times" aria-hidden="true"></i></span></p>
    <p class="day-number">Day @Model.DayNumber </p>
    <p>
        <span class="xp-reward">XP:</span> @Model.ExperienceReward |
        Required Words: <span id="writing-day-required-words">@Model.RequiredWords.ToString("##,###")</span>
    </p>
    <div id="writing-progress-bar" class="progress-background">
        <div class="progress-slider"></div>
    </div>
    <p>
        Written Words: <span id="written-words">@Model.WrittenWords</span>
        <script>checkProgress(@Model.WrittenWords, @Model.Id)</script>
    </p>
    <p id="current-writing-dayID" style="visibility: hidden; opacity: 0; top: -2000px;">@Model.Id</p>
    <p id="current-writing-dayNumber" style="visibility: hidden; opacity: 0; top: -2000px;">@Model.DayNumber</p>
</div>